#!/usr/bin/env bash

if [ -f $(brew --prefix)/etc/bash_completion ]; then
  . $(brew --prefix)/etc/bash_completion
fi

ROOT_PATH="$HOME/bash_scripts/dotfiles"

if [ -e "$ROOT_PATH/profile_environment" ]; then
  . "$ROOT_PATH/profile_environment"
fi

if [ -f "$ROOT_PATH/profile_functions" ]; then
  . "$ROOT_PATH/profile_functions"
fi

if [ -f "$ROOT_PATH/profile_aliases" ]; then
  . "$ROOT_PATH/profile_aliases"
fi

if [ -f "$HOME/company_profile_environment" ]; then
  . "$HOME/company_profile_environment"
fi

if [ -f "$HOME/company_profile_functions" ]; then
  . "$HOME/company_profile_functions"
fi

if [ -f "$HOME/company_profile_aliases" ]; then
  . "$HOME/company_profile_aliases"
fi

# Add RVM to PATH for scripting. Make sure this is the last PATH variable change.
export PATH="$PATH:$HOME/.rvm/bin"

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*
